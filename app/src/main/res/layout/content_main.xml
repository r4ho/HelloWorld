<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.raymond.helloworld.MainActivity"
    tools:showIn="@layout/activity_main">

    
    <TextView
        android:id="@+id/textview"
        android:textSize="30sp"
        android:textColor="#FF0000"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Welcome_To" />
    <TextView
        android:text="@string/CSE_110"
        android:paddingTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="#3060FF"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/Software_Engineering"
        android:layout_centerHorizontal="true"
        android:paddingTop="120dp"
        android:textSize="30sp"
        android:textColor="#70BB25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/Spring_2016"
        android:layout_centerHorizontal="true"
        android:paddingTop="170dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
